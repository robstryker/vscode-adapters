{
  "name": "vscode-server-connector",
  "displayName": "Server Connector",
  "description": "Connects vscode with different server adapters and runtimes",
  "version": "0.0.1",
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "redhat",
  "author": "Red Hat",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-developer/vscode-adapters.git"
  },
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "server",
    "runtimes",
    "middleware",
    "minishift",
    "adapters"
  ],
  "activationEvents": [
    "onCommand:servers.addLocation",
    "onCommand:server.start",
    "onCommand:server.debug",
    "onCommand:server.stop",
    "onCommand:server.restart",
    "onCommand:server.remove",
    "onCommand:server.output",
    "onCommand:server.add",
    "onCommand:server.publish",
    "onView:servers",
    "onLanguage:plaintext"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "servers.addLocation",
        "title": "Add Server Location",
        "icon": "resources/dark/add-location.svg",
        "category": "Servers"
      },
      {
        "command": "server.start",
        "title": "Start",
        "category": "Servers"
      },
      {
        "command": "server.debug",
        "title": "Debug",
        "category": "Servers"
      },
      {
        "command": "server.stop",
        "title": "Stop",
        "category": "Servers"
      },
      {
        "command": "server.restart",
        "title": "Restart",
        "category": "Servers"
      },
      {
        "command": "server.remove",
        "title": "Remove",
        "category": "Servers"
      },
      {
        "command": "server.output",
        "title": "Show Output Channel",
        "category": "Servers"
      },
      {
        "command": "server.addDeployment",
        "title": "Add Deployment to Server",
        "category": "Servers"
      },
      {
        "command": "server.removeDeployment",
        "title": "Remove Deployment from Server",
        "category": "Servers"
      },
      {
        "command": "server.publishFull",
        "title": "Publish Server (Full)",
        "category": "Servers"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "servers",
          "name": "Servers"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "servers.addLocation",
          "when": "view == servers",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "server.start",
          "when": "view == servers && viewItem == 'Stopped'",
          "group": "server-command@1"
        },
        {
          "command": "server.debug",
          "when": "view == servers && viewItem == 'Stopped'",
          "group": "server-command@2"
        },
        {
          "command": "server.stop",
          "when": "view == servers && viewItem == 'Started'",
          "group": "server-command@3"
        },
        {
          "command": "server.restart",
          "when": "view == servers && viewItem == 'Started'",
          "group": "server-command@4"
        },
        {
          "command": "server.remove",
          "when": "view == servers && viewItem == 'Stopped'",
          "group": "server-remove"
        },
        {
          "command": "server.output",
          "when": "view == servers && viewItem == 'Started'",
          "group": "server-status"
        },
        {
          "command": "server.output",
          "when": "view == servers && viewItem == 'Stopped'",
          "group": "server-status"
        },
        {
          "command": "server.output",
          "when": "view == servers && viewItem == 'Starting'",
          "group": "server-status"
        },
        {
          "command": "server.output",
          "when": "view == servers && viewItem == 'Stopping'",
          "group": "server-status"
        },
        {
          "command": "server.addDeployment",
          "when": "view == servers",
          "group": "server-status"
        },
        {
          "command": "server.removeDeployment",
          "when": "view == servers && viewItem =~ /(Add|Full|Synchronized|Incremental|Unknown)/",
          "group": "server-status"
        },
        {
          "command": "server.publishFull",
          "when": "view == servers",
          "group": "server-status"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Servers View configuration",
      "properties": {
        "vscodeAdapters.showChannelOnServerOutput": {
          "type": "boolean",
          "default": false,
          "description": "Show Server's output channel when new text added to output stream."
        }
      }
    }
  },
  "scripts": {
    "package": "node ./build/package.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "update-deps": "node_modules/.bin/ncu --upgrade --loglevel verbose --packageFile package.json && npm update",
    "coverage:upload": "codecov -f coverage/coverage-final.json",
    "build": "npm run compile && npm run package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.7.1",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "codecov": "^3.1.0",
    "decache": "^4.4.0",
    "decompress": "^4.2.0",
    "download": "^7.1.0",
    "glob": "^7.1.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-jenkins-reporter": "^0.4.0",
    "remap-istanbul": "^0.12.0",
    "sinon": "^6.3.4",
    "sinon-chai": "^3.2.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "vscode": "^1.1.21"
  },
  "dependencies": {
    "file-url": "^2.0.2",
    "find-java-home": "^0.2.0",
    "fs-extra": "7.0.0",
    "fstream": "^1.0.11",
    "mkdirp": "0.5.1",
    "path": "0.12.7",
    "pify": "4.0.0",
    "portfinder": "^1.0.17",
    "rsp-client": "0.0.4",
    "vscode-jsonrpc": "^4.0.0",
    "vscode-languageclient": "^5.1.0",
    "wait-on": "^3.0.1"
  }
}
